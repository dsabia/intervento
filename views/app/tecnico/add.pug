extends ../../layout/homepage-layout

block content
  h2 Aggiungi un tecnico

  form(action='/tecnico/add',method='POST').form-horizontal
    div.form-group.row
      div.col-md-6.col-xs-12
        label(for='name') Nome:
        input(name='name').form-control
      div.col-md-6.col-xs-12
        label(for='surname') Cognome:
        input(name='surname').form-control
    div.form-group.row
      div.col-md-6.col-xs-12
        label(for='account_code') Codice fiscale / P.Iva:
        input(name='account_code').form-control
    div.form-group.row
      div.col-md-12.col-xs-12
        label(for='address') Indirizzo:
        input(name='address', type='area').form-control
    div.form-group.row
      div.col-md-6.col-xs-12
        label(for='phone') Telefono:
        input(name='phone').form-control
    div.form-group.row
      div.col-md-6.col-xs-12
        label(for='email') E-mail:
        input(name='email').form-control
    button(type="submit").btn.btn-default Aggiungi Tecnico

  a(href="/tecnico") Elenco tecnici |
  a(href="/tecnico/add") Aggiungi tecnico
