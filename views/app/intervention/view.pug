h1 {{title}}

div(ng-show="pojo")
  table(class="table table-striped")
    tr
      td
        label {{pojo.code}}
      td
        label {{pojo.type_of_intervention}}
    tr
      td
        label {{pojo.date | date:'shortDate'}}
      td
        label {{pojo.start_time | date:'shortTime'}} - {{pojo.end_time | date:'shortTime'}}
    tr
      td(colspan='2')
        label {{pojo.note}}
  a(ng-click="editIntervention(pojo.code)") Modifica intervento |&nbsp;
  a(ng-click="deleteIntervention(pojo._id)") Elimina intervento

div(ng-show="list.length")
  table(class="table table-striped table-responsive")
    tr
      th #{__('codice')}
      th #{__('tipo-intervento')}
      th #{__('date')}
      th #{__('time')}
    tr(ng-repeat="item in list")
      td
        a(ng-click="viewIntervention(item.code)") {{item.code}}
      td {{item.type_of_intervention}}
      td {{item.date  | date:'shortDate'}}
      td {{item.start_time | date:'shortTime'}} - {{item.end_time | date:'shortTime'}}

br
a(ng-click="listInterventions()") Elenco interventi |&nbsp;
a(ng-click="addIntervention()") Aggiungi interventi
