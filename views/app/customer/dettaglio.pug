extends ../../layout/homepage-layout

block content
  h2= title
  div(id="form-add-new-customer")
  if customer != null
    h2 Dettaglio cliente #{customer.code}
    table(class="table table-striped")
      tr
        td
          label #{__('code')}           : #{customer.code}
        td
          label #{__('discount')}           : #{customer.discount}
      tr
        td
          label #{__('company_name')}  : #{customer.company_name}
        td
          label  #{__('piva_cf')}        : #{customer.piva_cf}
      tr
        td(colspan='2')
          label #{__('address')}        : #{customer.address}
      tr
        td
          label #{__('phone_no')}         : #{customer.phone}
        td
          label #{__('email')}             : #{customer.email}
    a(href="/customer/edit/" + customer.code) Modifica cliente |
    a(href="/customer/delete/" + customer._id) Elimina cliente
    br
  else
    h2 Lista dei clienti
    table(class="table table-striped table-responsive")
      tr
        th #{__('code')}
        th #{__('discount')}
        th #{__('company_name')}
        th #{__('piva_cf')}
        th #{__('address')}
        th #{__('phone_no')}
        th #{__('email')}
      each item in list
        tr
          td
            a(href="/customer/" + item.code) #{item.code}
          td #{item.discount}
          td
            a(href="/customer/" + item.code) #{item.company_name}
          td #{item.piva_cf}
          td #{item.address}
          td #{item.phone}
          td #{item.email}

  a(href="/customer") Elenco clienti |&nbsp;
  a(href="/customer/add") Aggiungi cliente
