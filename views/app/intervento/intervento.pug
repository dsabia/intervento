mixin intervento(intervento)
  table(class="table table-striped")
    tr
      td
        label #{intervento.codice}
      td
        label #{intervento.tipo_intervento}
    tr
      td
        label #{intervento.data.toDateString()}
      td
        label #{intervento.ora_inizio} - #{intervento.ora_fine}
    tr
      td(colspan='2')
        label #{intervento.note}
